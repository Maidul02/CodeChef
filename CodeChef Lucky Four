import java.util.Scanner;

public class Main{
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int test = sc.nextInt();
		
		
		for(int i = 1; i<=test; i++) {
	
			
			String s = sc.next();
			int count = 0;
			
			for(int j = 0; j<s.length(); j++){
				if((s.charAt(j))=='4'){
					count++;
				}
			}
			System.out.println(count);
}
	}
}
